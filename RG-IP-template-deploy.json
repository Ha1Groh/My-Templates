{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "location": {
            "type": "string"
        },
        "uniquePublicIPAddressName": {
            "type": "string"
        },
        "dnsNameLabel": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-09-01",
            "name": "[concat(parameters('uniquePublicIPAddressName'))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": [],
                "dnsSettings":{
                    "domainNameLabel": "[concat(parameters('dnsNameLabel'), uniqueString(resourceGroup().id))]"
                }
            }
        }
    ],
    "outputs": {
  "PublicIpResourceId": {
    "type": "string",
    "value": "[reference(parameters('uniquePublicIPAddressName')).publicIPAddresses]"   
  }
}
}